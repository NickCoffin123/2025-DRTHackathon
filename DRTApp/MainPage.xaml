<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DRTApp.MainPage"
             BackgroundColor="White"
             >

    <ScrollView Padding="50">
        <VerticalStackLayout
            VerticalOptions="Center"
            Spacing="25"
            Margin="0,0,0,100">
                        
            <Image
                Source="drt.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="DRT Logo" />

            <Label
                Text="Welcome to the Durham Region Transit bus tracking!"
                Style="{StaticResource Headline}"
                TextColor="Black"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Please enter your bus stop number."
                Style="{StaticResource SubHeadline}"
                TextColor="Black"
                SemanticProperties.HeadingLevel="Level2"/>

            <Border Stroke="#D93025"
                    BackgroundColor="#FDECEA"
                    StrokeShape="RoundRectangle"
                    Padding="10"
                    IsVisible="Collapse"
                    x:Name="ErrorArea">
                <Label Text="Error - Invalid bus stop number."
                      TextColor="#D93025"/>
            </Border>

            <Border>
                <VerticalStackLayout>
                    <Entry
                        x:Name="StopIDEntry"
                        Placeholder="Enter stop number here..."
                        TextColor="#3E2B2F"
                        FontAttributes="Bold"
                        Text=""
                        Margin="10"/>
                </VerticalStackLayout>
     
            </Border>
                           
            <Button
                CornerRadius="10"
                TextColor="#3E2B2F"
                FontAttributes="Bold"
                x:Name="MapGeneratorButton"
                Text="Generate Map" 
                SemanticProperties.Hint="Generates map."
                Clicked="OnMapGeneratorClicked"
                Background="#0B8261"
                MaximumWidthRequest="500"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
